<!--MENU-->

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><span class="oi oi-menu" aria-hidden="true"></span> Menu</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <p style="color: #ffffff; margin-top: 20px; margin-left: 15px">Products</p>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products/" Match="NavLinkMatch.All">
                <span class="oi oi-book" aria-hidden="true"></span> List Products
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products/create" Match="NavLinkMatch.All">
                <span class="oi oi-plus" aria-hidden="true"></span> Create Product
            </NavLink>
        </div>
        <div class="nav-item px-3">
                    <p style="color: #ffffff; margin-top: 20px; margin-left: 15px">Categories</p>
                </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="categories/create" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> List Category
            </NavLink>
        </div>
        <div class="nav-item px-3">
                    <NavLink class="nav-link" href="categories/create" Match="NavLinkMatch.All">
                        <span class="oi oi-box" aria-hidden="true"></span> Create Category
                    </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
